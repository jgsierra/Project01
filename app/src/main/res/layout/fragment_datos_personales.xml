<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DatosPersonalesFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Fragments.EditClienteFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_background"
                    android:src="@drawable/ic_person_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvNombrec"
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:text="Nombre"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        app:fontFamily="sans-serif-condensed" />

                    <EditText
                        android:id="@+id/etNombrel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_text_background"
                        android:focusable="auto"
                        android:singleLine="true"
                        app:fontFamily="sans-serif-condensed" />

                    <TextView
                        android:id="@+id/tvApellidoc"
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:text="Apellido"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        app:fontFamily="sans-serif-condensed" />

                    <EditText
                        android:id="@+id/etApellidol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_text_background"
                        android:focusable="auto"
                        android:singleLine="true"
                        app:fontFamily="sans-serif-condensed" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTipoIdentificacion"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="Tipo de Identificación"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    app:fontFamily="sans-serif-condensed" />

                <TextView
                    android:id="@+id/tvCiudadc"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="Número de Identificación"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    app:fontFamily="sans-serif-condensed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_tipoIdentificacion"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/spinner_background"
                    android:entries="@array/tipoIdentificacion" />

                <EditText
                    android:id="@+id/etTeleFijo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_background"
                    android:focusable="auto"
                    android:singleLine="true"
                    app:fontFamily="sans-serif-condensed" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCargo"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:text="Cargo o Rol"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:fontFamily="sans-serif-condensed" />

            <EditText
                android:id="@+id/etCargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_background"
                android:focusable="auto"
                android:singleLine="true"
                app:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/tvFENNc"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:text="Fecha de Nacimiento:"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:fontFamily="sans-serif-condensed" />


            <!--android:entries="@array/Provincias" />-->

            <!--android:entries="@array/Provincias" />-->

            <TextView
                android:id="@+id/etFechaPicker"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:text="dd/mm/aaaa"
                android:textSize="18sp"
                app:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/tvCIudad"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:text="Ciudad de Residencia"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:fontFamily="sans-serif-condensed" />

            <EditText
                android:id="@+id/etCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_background"
                android:focusable="auto"
                android:singleLine="true"
                app:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:text="Teléfono"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:fontFamily="sans-serif-condensed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_CodArea"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/spinner_background" />

                <EditText
                    android:id="@+id/etTeleMovil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_background"
                    android:focusable="auto"
                    android:singleLine="true"
                    app:fontFamily="sans-serif-condensed" />

            </LinearLayout>

            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAceptar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bordes_botones"
                    android:text="Aceptar"
                    android:textColor="@android:color/white"
                    android:visibility="visible" />

                <!--<Button-->
                <!--android:id="@+id/btnSearch"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:drawableEnd="@android:drawable/ic_menu_search"-->
                <!--android:text="Buscar" />-->
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</FrameLayout>